{
  "compilerOptions": {
    "target": "es2016",                                  

    "module": "Node16",                                
    // "rootDir": "./",                                


    "outDir": "./build",                                   

    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                     
    "noImplicitAny": true,                           
    "strictNullChecks": true,                         
    "strictFunctionTypes": true,                      
    "skipLibCheck": true  ,
    "moduleResolution": "node16",
    "types": ["jest"]                             
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts", "test/**/*.ts"]
}

